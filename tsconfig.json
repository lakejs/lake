{
  "compilerOptions": {
    "target": "es6",
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "lakelib/*": ["src/*"],
      "lakelib": ["src"]
    },
    "resolveJsonModule": true,
    "allowJs": false,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
    "examples/**/*",
    "tests/**/*",
    "scripts/**/*"
  ]
}
