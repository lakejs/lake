{
  "include": [
    "src/**/*",
    "examples/**/*",
    "tests/**/*",
  ],
  "compilerOptions": {
    "outDir": "temp",
    "moduleResolution": "node",
    "target": "es6",
    "allowJs": false,
    "removeComments": false,
    "strict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
  }
}
